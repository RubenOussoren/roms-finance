<%= turbo_frame_tag id do %>
  <div class="bg-container p-5 shadow-border-xs rounded-xl">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h2 class="font-medium text-lg text-primary">Milestones</h2>
        <% if has_milestones? %>
          <p class="text-sm text-secondary">
            <%= achieved_count %> of <%= total_count %> achieved
          </p>
        <% end %>
      </div>

      <%= render DS::Menu.new(variant: "button") do |menu| %>
        <% menu.with_button(text: "New", variant: "secondary", icon: "plus") %>

        <% menu.with_item(
            variant: "link",
            text: "Custom milestone",
            icon: "target",
            href: new_milestone_path,
            data: { turbo_frame: :modal }) %>
      <% end %>
    </div>

    <% if has_milestones? %>
      <div class="space-y-3">
        <% if next_milestone.present? %>
          <div class="mb-4">
            <p class="text-xs font-medium text-secondary uppercase tracking-wide mb-2">Next Goal</p>
            <%= render UI::Account::MilestoneCard.new(milestone: next_milestone, highlight: true) %>
          </div>
        <% end %>

        <% other_pending = pending_milestones.reject { |m| m == next_milestone } %>
        <% if other_pending.any? %>
          <div class="mb-4">
            <p class="text-xs font-medium text-secondary uppercase tracking-wide mb-2">Upcoming</p>
            <div class="space-y-2">
              <% other_pending.each do |milestone| %>
                <%= render UI::Account::MilestoneCard.new(milestone: milestone) %>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if achieved_milestones.any? %>
          <details class="group">
            <summary class="flex items-center gap-2 cursor-pointer text-sm text-secondary hover:text-primary py-2">
              <%= helpers.icon("chevron-right", size: "sm", class: "transition-transform group-open:rotate-90") %>
              <span>Achieved (<%= achieved_count %>)</span>
            </summary>
            <div class="space-y-2 mt-2 pl-6">
              <% achieved_milestones.each do |milestone| %>
                <%= render UI::Account::MilestoneCard.new(milestone: milestone) %>
              <% end %>
            </div>
          </details>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="mx-auto mb-4">
          <%= helpers.icon("target", size: "xl", class: "text-secondary") %>
        </div>
        <p class="text-secondary mb-4">No milestones yet</p>
        <p class="text-sm text-subdued mb-4">
          Set financial goals to track your progress toward building wealth.
        </p>

        <% if suggested_milestones.any? %>
          <p class="text-xs text-subdued mb-3">Based on your current balance, consider:</p>
          <div class="flex flex-wrap justify-center gap-2 mb-4">
            <% suggested_milestones.each do |suggestion| %>
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-container border border-primary text-primary">
                <%= suggestion[:name] %>
              </span>
            <% end %>
          </div>
        <% end %>

        <%= link_to "Add your first milestone",
            new_milestone_path,
            class: "inline-flex items-center gap-2 text-sm font-medium text-link hover:underline",
            data: { turbo_frame: :modal } %>
      </div>
    <% end %>
  </div>
<% end %>
