<div class="bg-container border border-primary rounded-lg p-4">
  <div class="mb-4">
    <h3 class="text-primary font-medium"><%= chart_title %></h3>
    <p class="text-sm text-secondary"><%= chart_description %></p>
  </div>

  <div id="<%= chart_id %>"
       class="h-64"
       data-controller="debt-comparison-chart"
       data-debt-comparison-chart-series-value="<%= series_json %>"
       data-debt-comparison-chart-has-baseline-value="<%= has_baseline? %>"
       data-debt-comparison-chart-has-prepay-only-value="<%= has_prepay_only? %>">
    <div class="flex items-center justify-center h-full text-secondary">
      Loading chart...
    </div>
  </div>

  <% if has_baseline? %>
    <div class="flex items-center justify-center gap-6 mt-4 text-sm">
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-gray-400 rounded-full"></span>
        <span class="text-secondary">Baseline (No Strategy)</span>
      </div>
      <% if has_prepay_only? %>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 bg-emerald-500 rounded-full"></span>
          <span class="text-secondary">Prepay Only</span>
        </div>
      <% end %>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
        <span class="text-secondary">Modified Smith Manoeuvre</span>
      </div>
    </div>
  <% end %>
</div>
