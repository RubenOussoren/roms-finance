<%# Investments tab: List of investment accounts with projections %>
<div class="space-y-6">
  <% if accounts.present? && accounts.any? %>
    <%# Summary %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-container shadow-border-xs rounded-xl p-4">
        <p class="text-sm text-secondary">Total Portfolio Value</p>
        <p class="text-2xl font-semibold text-primary">
          <%= format_money(Money.new(accounts.sum(&:balance), Current.family.currency)) %>
        </p>
      </div>

      <div class="bg-container shadow-border-xs rounded-xl p-4">
        <p class="text-sm text-secondary">Investment Accounts</p>
        <p class="text-2xl font-semibold text-primary"><%= accounts.count { |a| a.accountable_type == "Investment" } %></p>
      </div>

      <div class="bg-container shadow-border-xs rounded-xl p-4">
        <p class="text-sm text-secondary">Crypto Accounts</p>
        <p class="text-2xl font-semibold text-primary"><%= accounts.count { |a| a.accountable_type == "Crypto" } %></p>
      </div>
    </div>

    <%# Section heading - standalone %>
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-medium text-primary">Investment Accounts</h2>
      <p class="text-sm text-secondary">Click to expand for milestones</p>
    </div>

    <%# Each account in its own card %>
    <div class="space-y-4">
      <% accounts.each do |account| %>
        <%= render UI::Projections::AccountProjectionCard.new(
          account: account,
          projection_years: projection_years
        ) %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-container shadow-border-xs rounded-xl p-8 text-center">
      <div class="mx-auto w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
        <%= icon "trending-up", class: "w-8 h-8 text-green-600" %>
      </div>
      <h3 class="text-lg font-medium text-primary mb-2">No investment accounts</h3>
      <p class="text-secondary mb-4">
        Add investment or crypto accounts to see projections of your portfolio growth.
      </p>
      <%= link_to new_investment_path, class: "btn btn--primary" do %>
        <%= icon "plus", class: "w-4 h-4 mr-2" %>
        Add Investment Account
      <% end %>
    </div>
  <% end %>
</div>
