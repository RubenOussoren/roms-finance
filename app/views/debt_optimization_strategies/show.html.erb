<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-start justify-between">
    <div>
      <div class="flex items-center gap-2 mb-1">
        <%= link_to debt_optimization_strategies_path, class: "text-secondary hover:text-primary" do %>
          <%= icon "arrow-left", class: "w-4 h-4" %>
        <% end %>
        <h1 class="text-2xl font-semibold text-primary"><%= @strategy.name %></h1>
        <span class="px-2 py-1 text-xs font-medium rounded-full <%= status_badge_classes(@strategy) %>">
          <%= @strategy.status.titleize %>
        </span>
      </div>
      <p class="text-secondary"><%= strategy_type_label(@strategy) %></p>
    </div>

    <div class="flex items-center gap-2">
      <% if @strategy.draft? || @strategy.simulated? %>
        <%= button_to simulate_debt_optimization_strategy_path(@strategy),
              method: :post,
              class: "btn btn--primary flex items-center gap-2" do %>
          <%= icon "play", class: "w-4 h-4" %>
          Run Simulation
        <% end %>
      <% end %>
      <%= link_to edit_debt_optimization_strategy_path(@strategy),
            class: "btn btn--secondary flex items-center gap-2" do %>
        <%= icon "edit", class: "w-4 h-4" %>
        Edit
      <% end %>
    </div>
  </div>

  <% if @strategy.simulated? || @strategy.active? %>
    <!-- The Bottom Line: Strategy Recommendation -->
    <% if (recommendation_text = @strategy.recommendation_message(@summary_metrics)) %>
      <div class="bg-container rounded-xl border border-primary p-6 mb-6">
        <div class="flex items-center gap-2 mb-3">
          <%= icon("lightbulb", size: "md") %>
          <h3 class="text-lg font-semibold text-primary">The Bottom Line</h3>
        </div>
        <p class="text-primary text-base leading-relaxed">
          <%= recommendation_text %>
        </p>
      </div>
    <% end %>

    <!-- Summary Metrics (5 metrics) -->
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
      <div class="bg-container border border-green-300 rounded-lg p-4">
        <p class="text-xs text-secondary uppercase tracking-wide">Net Economic Benefit <%= finance_tooltip("Net Economic Benefit") %></p>
        <p class="text-2xl font-bold text-green-600"><%= format_money(Money.new(@summary_metrics[:net_benefit] || 0, @strategy.currency)) %></p>
      </div>
      <div class="bg-container border border-primary rounded-lg p-4">
        <p class="text-xs text-secondary uppercase tracking-wide">Mortgage Interest Saved</p>
        <p class="text-2xl font-bold text-primary"><%= format_money(Money.new(@summary_metrics[:total_interest_saved] || 0, @strategy.currency)) %></p>
      </div>
      <div class="bg-container border border-primary rounded-lg p-4">
        <p class="text-xs text-secondary uppercase tracking-wide">Tax Benefit <%= finance_tooltip("Tax deductible interest") %></p>
        <p class="text-2xl font-bold text-green-600"><%= format_money(Money.new(@summary_metrics[:total_tax_benefit] || 0, @strategy.currency)) %></p>
      </div>
      <div class="bg-container border border-orange-300 rounded-lg p-4">
        <p class="text-xs text-secondary uppercase tracking-wide">HELOC Interest Cost <%= finance_tooltip("HELOC") %></p>
        <p class="text-2xl font-bold text-orange-600"><%= format_money(Money.new(@summary_metrics[:total_heloc_interest_paid] || 0, @strategy.currency)) %></p>
      </div>
      <div class="bg-container border border-primary rounded-lg p-4">
        <p class="text-xs text-secondary uppercase tracking-wide">Time Saved</p>
        <p class="text-2xl font-bold text-primary"><%= months_to_years(@summary_metrics[:months_accelerated]) %></p>
      </div>
    </div>

    <!-- Bottom Line -->
    <% if @prepay_only_entries.present? && @prepay_only_entries.any? %>
      <% prepay_only_final = @strategy.prepay_only_entries.last %>
      <% baseline_final = @strategy.baseline_entries.last %>
      <% if prepay_only_final && baseline_final %>
        <%
          prepay_mortgage_interest = @strategy.prepay_only_entries.sum(&:primary_mortgage_interest) +
                                     @strategy.prepay_only_entries.sum(&:rental_mortgage_interest)
          baseline_mortgage_interest = @strategy.baseline_entries.sum(&:primary_mortgage_interest) +
                                       @strategy.baseline_entries.sum(&:rental_mortgage_interest)
          prepay_savings = baseline_mortgage_interest - prepay_mortgage_interest
          smith_additional = (@summary_metrics[:net_benefit] || 0) - prepay_savings
        %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex gap-3">
            <%= icon "info", class: "w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" %>
            <p class="text-sm text-blue-800">
              Prepaying alone saves you <strong><%= format_money(Money.new(prepay_savings, @strategy.currency)) %></strong> in mortgage interest.
              The Smith Manoeuvre saves an additional <strong><%= format_money(Money.new(smith_additional, @strategy.currency)) %></strong>
              through tax deductibility, but adds complexity and requires maintaining a HELOC and rental property.
            </p>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- Tax Disclaimer -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex gap-3">
        <%= icon "info", class: "w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" %>
        <p class="text-sm text-yellow-800">
          Tax estimates use combined federal and <%= DebtOptimizationStrategy::CANADIAN_PROVINCES[@strategy.effective_province] || "Ontario" %> marginal rates.
          They do not account for surtaxes, credits, or clawbacks.
          Consult a qualified tax professional for advice specific to your situation.
        </p>
      </div>
    </div>

    <!-- Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
      <%= render UI::DebtOptimization::ComparisonChart.new(chart_series: @chart_series, chart_type: "debt_comparison", currency: @strategy.currency) %>
      <%= render UI::DebtOptimization::ComparisonChart.new(chart_series: @chart_series, chart_type: "cumulative_tax_benefit", currency: @strategy.currency) %>
    </div>

    <!-- Ledger Tabs -->
    <div class="bg-container border border-primary rounded-lg">
      <div class="border-b border-primary px-4 py-3">
        <h3 class="font-medium text-primary">Month-by-Month Breakdown</h3>
        <div class="flex gap-4 mt-2" data-controller="tabs" data-tabs-active-class="border-blue-500 text-primary" data-tabs-inactive-class="border-transparent text-secondary">
          <button class="text-sm pb-1 border-b-2 border-blue-500 text-primary" data-tabs-target="tab" data-action="tabs#select" data-index="0">Modified Smith</button>
          <button class="text-sm pb-1 border-b-2 border-transparent text-secondary" data-tabs-target="tab" data-action="tabs#select" data-index="1">Prepay Only</button>
          <button class="text-sm pb-1 border-b-2 border-transparent text-secondary" data-tabs-target="tab" data-action="tabs#select" data-index="2">Baseline</button>
        </div>
      </div>

      <div data-tabs-target="panel" class="p-4">
        <%= render UI::DebtOptimization::LedgerTable.new(entries: @strategy_entries) %>
      </div>
      <div data-tabs-target="panel" class="p-4 hidden">
        <%= render UI::DebtOptimization::LedgerTable.new(entries: @prepay_only_entries) %>
      </div>
      <div data-tabs-target="panel" class="p-4 hidden">
        <%= render UI::DebtOptimization::LedgerTable.new(entries: @baseline_entries) %>
      </div>
    </div>

    <% if @summary_metrics[:strategy_stopped] %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex gap-3">
          <%= icon "alert-triangle", class: "w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" %>
          <div class="text-sm">
            <p class="font-medium text-yellow-800">Strategy Auto-Stopped</p>
            <p class="text-yellow-700"><%= @summary_metrics[:stop_reason] %></p>
          </div>
        </div>
      </div>
    <% end %>

    <% if @strategy.modified_smith? %>
      <details class="bg-container rounded-xl border border-primary p-6 mt-6">
        <summary class="text-base font-semibold text-primary cursor-pointer flex items-center gap-2">
          <%= icon("file-text", size: "md") %>
          Tax Documentation Guide
          <span class="text-xs text-secondary ml-1">(Important for CRA compliance)</span>
        </summary>
        <div class="mt-4 space-y-6 text-sm text-secondary leading-relaxed">
          <div>
            <h4 class="font-semibold text-primary mb-2">Documents to Keep</h4>
            <ul class="list-disc list-inside space-y-1">
              <li>HELOC monthly statements showing draws and interest charged</li>
              <li>Investment account statements showing purchased securities</li>
              <li>Rental property records (leases, receipts, T776 copies)</li>
              <li>Records linking each HELOC draw to a specific investment or rental expense</li>
              <li>Mortgage statements for both primary and rental properties</li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold text-primary mb-2">How Long to Keep Records</h4>
            <p>
              CRA requires you to keep all supporting documents for <strong>6 years</strong> from the date you file your return,
              per the Income Tax Act section 230. If you file late, the 6-year period starts from the filing date, not the tax year.
            </p>
          </div>

          <div>
            <h4 class="font-semibold text-primary mb-2">Common Audit Triggers</h4>
            <ul class="list-disc list-inside space-y-1">
              <li>Large interest deductions relative to investment income</li>
              <li>Mixed personal and investment use on the same HELOC</li>
              <li>Unclear paper trail between borrowed funds and eligible investments</li>
              <li>Inconsistent reporting across T776 (rental) and T1 (personal) returns</li>
            </ul>
          </div>

          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex gap-3">
              <%= icon "alert-triangle", class: "w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" %>
              <div class="text-sm text-yellow-800">
                <p class="font-medium mb-1">Important Disclaimer</p>
                <p>
                  This tool provides estimates for planning and educational purposes only.
                  The Smith Manoeuvre is a complex tax strategy. Consult a qualified tax professional
                  and consider getting a ruling from CRA before implementing.
                  ROMS Finance is not a tax advisor and this does not constitute tax advice.
                </p>
              </div>
            </div>
          </div>
        </div>
      </details>
    <% end %>

  <% else %>
    <!-- Not Simulated -->
    <div class="bg-container border border-primary rounded-lg p-8 text-center">
      <div class="mx-auto w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-4">
        <%= icon "play-circle", class: "w-8 h-8 text-blue-600" %>
      </div>
      <h3 class="text-lg font-medium text-primary mb-2">Ready to Simulate</h3>
      <p class="text-secondary mb-4">
        Run the simulation to see how the Modified Smith Manoeuvre will
        affect your mortgage payoff timeline and tax benefits.
      </p>
      <%= button_to simulate_debt_optimization_strategy_path(@strategy),
            method: :post,
            class: "btn btn--primary" do %>
        <%= icon "play", class: "w-4 h-4 mr-2" %>
        Run Simulation
      <% end %>
    </div>
  <% end %>

  <!-- Strategy Configuration -->
  <div class="bg-container border border-primary rounded-lg">
    <div class="border-b border-primary px-4 py-3">
      <h3 class="font-medium text-primary">Strategy Configuration</h3>
    </div>
    <div class="p-4 grid grid-cols-2 md:grid-cols-3 gap-4">
      <div>
        <p class="text-xs text-secondary uppercase tracking-wide">Primary Mortgage</p>
        <p class="text-primary font-medium"><%= @strategy.primary_mortgage&.name || "Not set" %></p>
      </div>
      <div>
        <p class="text-xs text-secondary uppercase tracking-wide">HELOC <%= finance_tooltip("HELOC") %></p>
        <p class="text-primary font-medium"><%= @strategy.heloc&.name || "Not set" %></p>
      </div>
      <div>
        <p class="text-xs text-secondary uppercase tracking-wide">Rental Mortgage</p>
        <p class="text-primary font-medium"><%= @strategy.rental_mortgage&.name || "Not set" %></p>
      </div>
      <div>
        <p class="text-xs text-secondary uppercase tracking-wide">Monthly Rental Income</p>
        <p class="text-primary font-medium"><%= format_money(Money.new(@strategy.rental_income || 0, @strategy.currency)) %></p>
      </div>
      <div>
        <p class="text-xs text-secondary uppercase tracking-wide">Monthly Rental Expenses</p>
        <p class="text-primary font-medium"><%= format_money(Money.new(@strategy.rental_expenses || 0, @strategy.currency)) %></p>
      </div>
      <div>
        <p class="text-xs text-secondary uppercase tracking-wide">Simulation Period</p>
        <p class="text-primary font-medium"><%= @strategy.simulation_months %> months (<%= (@strategy.simulation_months / 12.0).round(1) %> years)</p>
      </div>
      <div>
        <p class="text-xs text-secondary uppercase tracking-wide">Province</p>
        <p class="text-primary font-medium"><%= DebtOptimizationStrategy::CANADIAN_PROVINCES[@strategy.effective_province] || "Ontario" %></p>
      </div>
    </div>
  </div>

  <!-- Delete -->
  <div class="border-t border-primary pt-4">
    <%= button_to debt_optimization_strategy_path(@strategy),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this strategy?" },
          class: "text-red-600 hover:text-red-700 text-sm" do %>
      <%= icon "trash-2", class: "w-4 h-4 inline mr-1" %>
      Delete Strategy
    <% end %>
  </div>
</div>
