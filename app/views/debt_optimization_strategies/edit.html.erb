<div class="max-w-3xl mx-auto">
  <div class="mb-6">
    <div class="flex items-center gap-2 mb-1">
      <%= link_to debt_optimization_strategy_path(@strategy), class: "text-secondary hover:text-primary" do %>
        <%= icon "arrow-left", class: "w-4 h-4" %>
      <% end %>
      <h1 class="text-2xl font-semibold text-primary">Edit Strategy</h1>
    </div>
    <p class="text-secondary"><%= @strategy.name %></p>
  </div>

  <% if @strategy.simulated? || @strategy.active? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex gap-3">
        <%= icon "alert-triangle", class: "w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" %>
        <div class="text-sm">
          <p class="font-medium text-yellow-800">Simulation Results Will Be Cleared</p>
          <p class="text-yellow-700">
            Changing strategy settings will clear existing simulation results.
            You'll need to run the simulation again after saving.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "form", strategy: @strategy, loan_accounts: @loan_accounts %>
</div>
