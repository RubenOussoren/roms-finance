<% if @balance_only %>
  <div class="space-y-6">
    <div class="bg-yellow-tint-10 rounded-lg p-4 text-sm text-yellow-600 flex items-center gap-2">
      <%= icon "eye", size: "sm", color: "warning" %>
      <p>You have balance-only access to this account</p>
    </div>

    <%= render UI::AccountPage.new(
          account: @account,
          chart_view: @chart_view,
          chart_period: @period,
          active_tab: nil
        ) %>
  </div>
<% else %>
  <%= render UI::AccountPage.new(
        account: @account,
        chart_view: @chart_view,
        chart_period: @period,
        active_tab: @tab
      ) do |account_page| %>
    <%= account_page.with_activity_feed(feed_data: @activity_feed_data, pagy: @pagy, search: @q[:search]) %>
  <% end %>
<% end %>
