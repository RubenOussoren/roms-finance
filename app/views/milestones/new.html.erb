<%= turbo_frame_tag "modal" do %>
  <%= render DS::Dialog.new do |dialog| %>
    <% dialog.with_header(title: @account.liability? ? "New Debt Milestone" : "New Milestone") %>
    <% dialog.with_body do %>
      <%= styled_form_with model: @milestone, url: account_milestones_path(@account, return_to: params[:return_to]), class: "space-y-4" do |form| %>
        <div class="space-y-3">
          <%= form.text_field :name,
              label: "Name",
              required: true,
              placeholder: @account.liability? ? "e.g., Paid Off!, 50% Paid" : "e.g., Emergency Fund $10K" %>

          <% if @account.liability? %>
            <div>
              <label class="block text-sm font-medium text-primary mb-1">Payoff Target *</label>
              <div class="flex items-center gap-2">
                <input type="number"
                       name="milestone[target_percentage]"
                       id="milestone_target_percentage"
                       min="0"
                       max="100"
                       step="1"
                       required
                       autocomplete="off"
                       placeholder="e.g., 50"
                       class="flex-1 rounded-lg border border-secondary bg-container px-3 py-2 text-primary focus:outline-none focus:ring-2 focus:ring-blue-500">
                <span class="text-secondary">% paid off</span>
              </div>
              <p class="text-xs text-secondary mt-1">
                Current balance: <%= format_money(Money.new(@account.balance.abs, @account.currency)) %>.
                Use 100 for full payoff.
              </p>
            </div>
          <% else %>
            <%= form.money_field :target_amount,
                label: "Target Amount",
                required: true,
                disable_currency: true %>
          <% end %>

          <%= form.date_field :target_date,
              label: "Target Date (optional)",
              min: Date.current,
              help_text: "Set a target date to track if you're on schedule" %>

          <%= form.hidden_field :target_type %>
          <% if @milestone.reduction_milestone? %>
            <%= form.hidden_field :starting_balance %>
          <% end %>
        </div>

        <%= form.submit "Create Milestone" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
