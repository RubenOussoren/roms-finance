<%= render DS::Dialog.new do |dialog| %>
  <% dialog.with_header(title: "New Milestone") %>
  <% dialog.with_body do %>
    <%= styled_form_with model: @milestone, url: account_milestones_path(@account), class: "space-y-4" do |form| %>
      <div class="space-y-3">
        <%= form.text_field :name,
            label: "Name",
            required: true,
            placeholder: "e.g., Emergency Fund $10K" %>

        <%= form.money_field :target_amount,
            label: "Target Amount",
            required: true,
            disable_currency: true %>

        <%= form.date_field :target_date,
            label: "Target Date (optional)",
            min: Date.current,
            help_text: "Set a target date to track if you're on schedule" %>
      </div>

      <%= form.submit "Create Milestone" %>
    <% end %>
  <% end %>
<% end %>
